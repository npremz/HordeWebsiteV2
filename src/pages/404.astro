---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
---

<Layout
  title="Page non trouvée"
  description="La page que vous recherchez n'existe pas ou a été déplacée."
  robots="noindex, nofollow"
>
  <section class="min-h-[70vh] flex flex-col justify-center items-center text-center">
    <span class="section-label mb-4">Erreur 404</span>
    <h1 class="font-display uppercase text-6xl sm:text-8xl lg:text-9xl xl:text-[12rem] leading-none mb-8">
      Page<br />introuvable
    </h1>
    <p class="text-xl sm:text-2xl max-w-md mb-10">
      La page que vous recherchez n'existe pas ou a été déplacée.
    </p>
    <a
      href="/"
      class="font-mono uppercase text-sm border border-black px-6 py-4 hover:bg-black hover:text-bg-light transition-colors duration-300"
    >
      Retour à l'accueil
    </a>
  </section>
  <Footer />
</Layout>
