---
import Layout from '../layouts/Layout.astro';
import Line from '../components/ui/Line.astro';
import Wrapped from '../components/ui/Wrapped.astro';
import BackgroundCanvas from '../components/ui/BackgroundCanvas.astro'
import Physics from '../components/ui/Physics.astro'
import StackingCards from '../components/ui/StackingCards.astro'
import Footer from '../components/Footer.astro';
import Weather from '../components/ui/Weather.astro'
