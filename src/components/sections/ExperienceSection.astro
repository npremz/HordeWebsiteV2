---
import Physics from '../ui/Physics.astro';

interface Props {
	label?: string;
	text?: string;
	second?: string;
}

const {
	label = 'L\'experience\nest la clé',
	text = '<span>Le design<br>attire,</span><span>l\'expérience<br>retient.</span>',
	second = 'l\'expérience retient.',
} = Astro.props;
---

<span class="divider mt-16 sm:mt-64 xl:mt-82"></span>
<div class="section-spacing">
	<div class="flex-between">
		<h3 class="section-label leading-[1.414]" set:html={label.replace(/\n/g, '<br>')}/>
		<svg width="27" height="18" viewBox="0 0 27 18" fill="none" xmlns="http://www.w3.org/2000/svg">
			<rect y="0.00012207" width="8.96048" height="8.96048" fill="#3A3737"/>
			<rect x="17.9219" y="0.00012207" width="8.96048" height="8.96048" fill="#3A3737"/>
			<rect x="8.95996" y="8.96033" width="8.96048" height="8.96048" fill="#3A3737"/>
		</svg>
	</div>
	<div class="section-spacing heading-display-lg">
		<p class="heading-display-sm leading-none text-[1.625rem] sm:text-[2.5rem] md:text-[4rem] lg:text-[6rem] xl:text-[7.5rem] flex flex-col *:block *:w-fit  [&>*:first-child]:self-start [&>*:last-child]:self-end [&>*:last-child]:text-right" set:html={text.replace(/\n/g, '<br>')} />
	</div>
</div>
<Physics class='section-spacing' />
