---
import Physics from '../ui/Physics.astro';

interface Props {
	label?: string;
	text?: string;
	second?: string;
}

const {
	label = 'Nous créons des interfaces intuitives qui répondent aux intentions des utilisateurs.',
	text = '<span>Le design<br>attire,</span><span>l\'expérience<br>retient.</span>',
} = Astro.props;
---

<div class="section-spacing mt-16 sm:mt-64 xl:mt-82">
	<div class="flex-between gap-8">
		<h3 class="section-label leading-[1.414] max-w-104" set:html={label.replace(/\n/g, '<br>')}/>
		<svg class="shrink-0" width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
			<rect width="7" height="20" transform="matrix(0 -1 -1 -4.37114e-08 20 20)" fill="#222121"/>
			<rect width="6" height="7" transform="matrix(0 -1 -1 -4.37114e-08 7 13)" fill="#222121"/>
			<rect width="6" height="7" transform="matrix(0 -1 -1 -4.37114e-08 20 13)" fill="#222121"/>
			<rect width="7" height="13" transform="matrix(0 -1 -1 -4.37114e-08 13 7)" fill="#222121"/>
		</svg>

	</div>
	<div class="section-spacing heading-display-lg">
		<p class="heading-display-sm leading-none text-[1.625rem] sm:text-[2.5rem] md:text-[4rem] lg:text-[6rem] xl:text-[7.5rem] flex flex-col *:block *:w-fit  [&>*:first-child]:self-start [&>*:last-child]:self-end [&>*:last-child]:text-right" set:html={text.replace(/\n/g, '<br>')} />
	</div>
</div>
<Physics class='section-spacing' />
